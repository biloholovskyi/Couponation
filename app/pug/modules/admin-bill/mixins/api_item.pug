mixin api_item(name, status, total, approved, update)
  tr
    td.name= name
    if status
      td.status.status--active
        .tooltip Active
    else
      td.status.status--blocked
        .tooltip Blocked
          .tooltip-hover
            .tooltip-row
              .left Blocked by
              .right
                a(href='#' target='_blank') Username
            .tooltip-row
              .left Block date
              .right 12, 2020 – 12:00 EST
            .tooltip-row
              .left Reason
              .right Way too much bad coupons
    td.total= total
    td.approved= approved
    td.updateMay= update
    td.buttons
      button Details
      if status
        button.block Block
      else
        button.unblocked Unblock

