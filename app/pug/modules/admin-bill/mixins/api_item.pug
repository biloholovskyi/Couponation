mixin api_item_single(name, coupon, shop, recived, date, moderator)
  tr
    td.coupon
      .name= name
      p= coupon
    td.shop= shop
    td.recived= recived
    td.date= date
    td.moderator= moderator
    td.buttons.buttons--padding
      button Details
      button.block Unpublish


