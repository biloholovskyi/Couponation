mixin adm-select-item_bill(name, status)
  if status
    .adm-select-item_bill.type-from.type-select-js
      .name= name
        img(src="./media/icon/small-arrow.svg", alt="")
      .hover-block.type-from
        .line-input
          .text From
          input(type='number' placeholder='0')
        .line-input
          .text To
          input(type='number' placeholder='10000')
        button Confirm

  else
    .adm-select-item_bill.type-list.type-select-js
      .name= name
        img(src="./media/icon/small-arrow.svg", alt="")
      .hover-block
        .line Option 1
        .line Option 2
        .line Option 3