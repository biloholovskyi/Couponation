extends ../layout/admin
include ../modules/admin-bill/mixins/adm_select
include ../modules/admin/user_item

block variables
  - const pageTitle = 'USERS'

block content
  .api-sources
    .admin__panel.adm__shop--page
      include ../modules/admin/admin_bar
      .admin__content.admin__content--bill(style="padding-bottom: 80px")
        .admin__caption
          h1 Josh Barnett
          button  Block user
        .user-tab__head
          .tabs
            .tab.active#tab-main Main info 
            .tab#tab-stat Statistic
        .user-tab__body.show#body-main
          .user__info
            .user__item
              h4 Last visit
              p Today, 20 min ago
            .user__item
              h4 Invited by
              p Admin
            .user__item
              h4 Invitation date
              p May 10, 2020 â€“ 14:08
          .lines    
          h2 Personal data
          form.small-form__form.shop__form
            .double
              .input-item
                .placeholder First name
                input(type='text')
              .input-item
                .placeholder Last name 
                input(type='text') 
              .input-item(style="margin-bottom: 16px")
                .placeholder Email
                input(type='email') 
                .new_pass Send new password
          .lines      
          h3 Select moderation type
          .radio__block
            label.radio
              input(type="radio" name="r" value="1" checked)
              span New coupons
            label.radio
              input(type="radio" name="r" value="2")
              span New shops
            label.radio
