extends ../layout/admin
include ../modules/admin-bill/mixins/adm_select
include ../modules/admin/user_item

block variables
  - const pageTitle = 'API'

block content
  .api-sources
    .admin__panel.adm__shop--page
      include ../modules/admin/admin_bar
      .admin__content.admin__content--bill
        .admin__caption
          h1 Users
          .adm_nav
            .admin__search.admin__search--api
              input(type="text" placeholder="Search by user name")
              img(src="../media/icon/search.svg", alt="icon")
            button.new_user  Invite new user 
        .adm-select-wrapp_bill
          .left
            +adm-select-item_bill('All statuses')
            +adm-select-item_bill('All types')
            +adm-select-item_bill('All prodcutivity')
          .right Clear filters
        .api-sources__table
          table.api-table
            thead.api-table__head
              tr
                th.sort Name
                th Invited
                th Last activity
                th Coupons added
                th Shops added
                th
            tbody.api-table__body.users_table
              +user_item('Josh Barnett', 'call.me.josh@mailservice.com', 'Yesterday, 11:54 GMT', 'Today, 10 min ago', '35 total', '12 total')

    include ../modules/admin/invite_user_modal            